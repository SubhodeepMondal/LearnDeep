{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": false,
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_CUDA": "ON",
                "USE_SYSTEM_GTEST": "OFF",
                "USE_SYSTEM_BENCHMARK ": "OFF"
            }
        },
        {
            "name": "release_cpu",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_CUDA": "OFF",
                "USE_SYSTEM_GTEST": "OFF",
                "USE_SYSTEM_BENCHMARK ": "OFF"
            }
        },
        {
            "name": "release_gpu",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_CUDA": "ON",
                "USE_SYSTEM_GTEST": "OFF",
                "USE_SYSTEM_BENCHMARK ": "OFF"
            }
        },
        {
            "name": "debug_cpu",
            "hidden": false,
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_CUDA": "OFF",
                "USE_SYSTEM_GTEST": "OFF",
                "USE_SYSTEM_BENCHMARK ": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_CXX_FLAGS": "-g -O0 -fsanitize=address"
            }
        },
        {
            "name": "debug_gpu",
            "hidden": false,
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_CUDA": "ON",
                "USE_SYSTEM_GTEST": "OFF",
                "USE_SYSTEM_BENCHMARK ": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_CXX_FLAGS": "-fsanitize=address"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "release_cpu",
            "configurePreset": "release_cpu"
        },
        {
            "name": "release_gpu",
            "configurePreset": "release_gpu"
        },
        {
            "name": "debug_cpu",
            "configurePreset": "debug_cpu"
        },
        {
            "name": "debug_gpu",
            "configurePreset": "debug_gpu"
        }
    ],
    "testPresets": [
        {
            "name": "release_cpu",
            "configurePreset": "release_cpu"
        }
    ]
}